<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_color"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/relativeLayoutHeader"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/light_green">

        <LinearLayout
            android:id="@+id/relativeLayoutHeader2"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="@color/light_green"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_margin="5dip"
                android:background="@drawable/back_button_xml"
                android:clickable="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textSize="12dip"></Button>

            <LinearLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/buttonBack"
                android:layout_weight="0.98">

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:layout_weight="0.18"
                    android:ellipsize="end"
                    android:shadowColor="#000000"
                    android:shadowDx="1.2"
                    android:shadowDy="1.2"
                    android:shadowRadius="1.2"
                    android:text="Test June 123"
                    android:textColor="@color/white"
                    android:textSize="14dip"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/relativeLayout45"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dip"
            android:layout_toRightOf="@+id/buttonAddLayout"
            android:layout_weight="0.6"
            android:gravity="right">

            <Button
                android:id="@+id/buttonYes"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ok_button_xml"
                android:clickable="true"
                android:gravity="right"
                android:maxLines="1"
                android:textSize="12dip" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:isScrollContainer="true"

        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/main_color"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayoutInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayoutTime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayoutPartOfDay"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:id="@+id/relativeLayout3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/textViewLoading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="10dip"
                                android:layout_marginTop="10dip"
                                android:paddingRight="20dip"
                                android:textSize="19dip"></TextView>

                            <TextView
                                android:id="@+id/textViewDishName"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_alignBottom="@+id/textViewLoading"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="5dip"
                                android:text="asdasdsd"
                                android:gravity="center_vertical|left"
                                style="@style/textBig"
                                android:textColor="@color/bg_group_item_expanded_state"/>

                            <Button
                                android:id="@+id/buttonChangeDish"
                                android:layout_width="35dip"
                                android:layout_height="35dip"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="5dip"
                                android:layout_marginRight="18dp"
                                android:background="@drawable/change_button_xml"
                                android:text=""
                                android:visibility="gone"/>
                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/linearLayoutPartOfDay4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textViewPartOfDayLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@string/day_time"
                                android:textColor="@color/text_color"
                                android:textSize="19dip" />

                            <Spinner
                                android:id="@+id/SpinnerPartOfDay"
                                android:layout_width="0px"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="0dp"
                                android:layout_weight="1"
                                android:textColor="@color/text_color" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutPartOfDay3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bg_group_item_dragging_active_state"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/linearLayoutPartOfDay2"
                            android:layout_width="0px"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewPartOfDayLabel2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@string/timeHHMM"
                                android:textColor="@color/text_color"
                                android:textSize="19dip" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textViewTime"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="0dip"
                            android:text=""
                            android:textColor="@color/text_color_blue"
                            android:drawableRight="@drawable/ic_item_swipe_pinned"
                            android:gravity="center_vertical|center_horizontal"
                            android:textSize="22dip" />



                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayoutCaloricity"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_green"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewDishCaloricityTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textViewLoading"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dip"
                        android:text="@string/amoutnt_of_calory"
                        android:textColor="@color/text_color"
                        android:textSize="19dip" />

                    <TextView
                        android:id="@+id/textCaloricityValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textViewLoading"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="0dip"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="19dip" />

                    <TextView
                        android:id="@+id/textCaloricityValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textViewLoading"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dip"
                        android:text="@string/kcal"
                        android:textColor="@color/text_color"
                        android:textSize="17dip" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayoutCaloricity1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_green"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linearLayoutCaloricity2"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:background="@color/light_green"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewDishCaloricityTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textViewLoading"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="0dip"
                            android:layout_marginLeft="8dp"
                            android:text="@string/protein"
                            android:textColor="@color/protein"
                            android:textSize="16dip" />

                        <TextView
                            android:id="@+id/textProteinValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textViewLoading"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="0dip"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="0"
                            android:textColor="@color/protein"
                            android:textSize="17dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutCaloricity5"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:background="@color/light_green"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewDishCaloricityTitle21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textViewLoading"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="0dip"
                            android:layout_marginLeft="10dp"
                            android:text="@string/fat"
                            android:textColor="@color/fat"
                            android:textSize="16dip" />

                        <TextView
                            android:id="@+id/textFatValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textViewLoading"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="0dip"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textColor="@color/fat"
                            android:textSize="17dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutCaloricity21"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:background="@color/light_green"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewDishCaloricityTitle22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textViewLoading"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="0dip"
                            android:layout_marginLeft="10dp"
                            android:text="@string/carbon"
                            android:textColor="@color/carbon"
                            android:textSize="16dip" />

                        <TextView
                            android:id="@+id/textCarbonValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textViewLoading"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="0dip"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textColor="@color/carbon"
                            android:textSize="17dip" />
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/textViewDishWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/portion_size"
                    android:textColor="@color/text_color"
                    android:textSize="19dip" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/dishWeightInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"

                        android:layout_marginTop="2dp"
                        android:inputType="number"
                        android:hint="@string/portion_size"/>

                    <Button
                        android:id="@+id/buttonYes2"
                        android:layout_width="45dip"
                        android:layout_height="45dip"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ok_button_blue_xml"
                        android:clickable="true"
                        android:maxLines="1"
                        android:textSize="12dip" />
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>